<% include ./layouts/header.ejs %>
  <div class="container text-center ">
    <h1>File Upload</h1>
    <%if(msg!== null){%>
      <div class="alert alert-<%=type%>" role="alert">
          <%= typeof msg != 'undefined' ? msg : '' %>
      </div>
    <%}%>
    <form action="/audio" method="POST" enctype="multipart/form-data" class="container">
      <div class="row">
        <div class="col">
          <label for="">Track Name</label>
          <input type="text" class="form-control" name="trackname" required placeholder="ANDAVAR">
        </div>
        <div class="col">
            <div class="form-group">
              <label for="name">Album</label>
              <select class="form-control" id="name" name="albumid" required>
                <%for(let i =0; i<album.length;i++){%>
                  <option value="<%=album[i].id%>"><%=album[i].name%></option>
                <%}%>
              </select>
            </div>
        </div>
      </div>
      
      <div class="form-group">
          <div class="form-group">
              <label for="">Lyrics</label>
              <textarea name="ly" cols="10" rows="20" class="form-control"></textarea>
            </div>
      </div>
      <div class="input-group mb-3">
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="input" name="audio" accept="audio/*" required>
          <label class="custom-file-label" for="input" >Choose file</label>
        </div>
      </div>
      
      <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
    </form>
    <br>
  </div>

</body>
</html>